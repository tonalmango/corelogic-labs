# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL for CORS (UPDATE with your actual domain)
FRONTEND_URL=https://corelogic-labs.onrender.com

# MongoDB Configuration
# CRITICAL: Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/corelogiclabs?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Generate a strong random string (minimum 32 characters) for production
# Generate with: openssl rand -base64 32
# Or PowerShell: [System.Guid]::NewGuid().ToString().Replace("-", "") + [System.Guid]::NewGuid().ToString().Replace("-", "")
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars-long-random-string

# Email Service Configuration
# For Gmail: Enable 2FA and generate App Password at myaccount.google.com/apppasswords
# For SendGrid: Get API key from app.sendgrid.com/settings/api_keys
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-or-api-key
EMAIL_FROM=noreply@white-label-agency.com

# API Rate Limiting
API_RATE_LIMIT=100

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: AWS S3 Configuration (for file uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name
